<% provide(:title, t("sign_in.title")) %>
<h1><%= t("sign_in.title") %></h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_with(url: signin_path) do |f| %>
      <%= f.label :email, class: "form-label" %>
      <%= f.text_field :email, class: "form-control" %>
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.submit t("sign_in.title"), class: "mt-3 btn btn-large btn-primary custom-btn-primary " %>
    <% end %>
    <p class="mt-3 text-center">New User? <%= link_to t("sign_up_now"), signup_path %></p>
  </div>
</div>
